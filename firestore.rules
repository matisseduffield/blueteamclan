rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to all documents
    match /{document=**} {
      allow read: if true;
    }
    
    // Allow write access to clan info
    match /clan/{docId} {
      allow write: if true;
    }
    
    // Allow write access to members collection
    match /members/{memberId} {
      allow write: if true;
    }
    
    // Allow write access to events collection
    match /events/{eventId} {
      allow write: if true;
    }
    
    // Allow write access to clash status (CWL, wars, raids)
    match /clashStatus/{docId} {
      allow write: if true;
    }
    
    // Allow write access to universal events
    match /universalEvents/{eventId} {
      allow write: if true;
    }
    
    // Allow write access to join requests
    match /joinRequests/{requestId} {
      allow write: if true;
    }
  }
}
